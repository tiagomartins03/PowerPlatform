ClearCollect(
    colAutomatic,
    Sort(
        NetflixMovies,
        ID,
        SortOrder.Ascending
    )
);
ForAll(
    Sequence(
        RoundUp(
            First(
                Sort(
                    NetflixMovies,
                    ID,
                    SortOrder.Descending
                )
            ).ID / 2000,
            0
        )
    ),
    With(
        {UltimoID: Last(colAutomatic).ID},
        Collect(
            colAutomatic,
            Filter(
                Sort(
                    NetflixMovies,
                    ID,
                    SortOrder.Ascending
                ),
               ID > UltimoID
            )
        )
    )
)
