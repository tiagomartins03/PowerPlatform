//Initialize a collection
ClearCollect(
    colAutomatic,
    //Sort ascending all records from Database using ID Column
    Sort(
        NETFLIXDATA,
        ID,
        SortOrder.Ascending
    )
);
//Count how many times the loop will be used for get all records from database
ForAll(
    Sequence(
        RoundUp(
            First(
                Sort(
                    NETFLIXDATA,
                    ID,
                    SortOrder.Descending
                )
            ).ID / 2000,
            0
        )
    ),
//Feeding collection with all data from main datasource
    With(
        {LastID: Last(colAutomatic).ID},
        Collect(
            colAutomatic,
            Filter(
                Sort(
                    NETFLIXDATA,
                    ID,
                    SortOrder.Ascending
                ),
                ID > UltimoID
            )
        )
    )
)
